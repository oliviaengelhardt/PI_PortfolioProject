.nav {
    position: fixed;
    bottom: 0;
    right: 0;
    transform: scale(0.75);
}

.nav .aboutMe {
    color: $navColor;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 20px;
    position: fixed;
    // bottom: 45px;
    // right: 34px;
    transform: translate(60%, -240%);
}

.nav:hover {
    animation: takeMe 2.5s linear infinite;
}

@keyframes takeMe {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}