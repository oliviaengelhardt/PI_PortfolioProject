.header {
    // margin 0 auto;
    position: absolute;
    // top: 3%;
    // transform: translate(0, 0%);
    // display: flex;
    background-color: $backgroundColor;
    justify-content: center;
    align-items: center;
    width: 100vh;
    height: 100vw;
    transform: rotate(-90deg) translateX(-100vh);
    transform-origin: top left;
    overflow-y: scroll;
    overflow-x: hidden;
    
    .content {
        width: 200vw;
        height: 100vh;
        position: relative;
        display: flex;
        flex-direction: row;
        transform: rotate(90deg) translateY(-100vh);
        transform-origin: top left;
        // overflow-x: hidden;

        p {
            margin: 0 auto;
            color: $bigText;
            position: absolute;
            top: 50%;
            transform: translate(0%, -50%);
            font-size: 144px;
            font-family: Arial, Helvetica, sans-serif;
            width: 100vw;
        }

        .slide {
            width: 100%;
            height: 100%;
        }

        .illustrations {
            // background-color: darkblue;
        }

        .design {
            // background-color: purple;
        }

        .ill {

            img {
                height: 20%;
                width: 20%;
            }

            .one {
            }
        }

        .nav {
            position: fixed;
            bottom: 0;
            right: 100vw;

            span {
                color: white;
            }

            .takeMe {
                position: relative;
                width: 520px;
                height:300px;
                margin: 0 auto;
                font-size: 15px;
            }

            .takeMe span {
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 70px;
                height: 300px;
                margin-left: -35px;
                line-height: 530px; /* height*2 - font-size */
                text-align: center;
                transform-origin: bottom center;
            }

            .takeMe span:nth-of-type(1)  {
                transform: rotate(-90deg);
            }
            .takeMe span:nth-of-type(2)  {
                transform: rotate(-70deg);
            }
            .takeMe span:nth-of-type(3)  {
                transform: rotate(-50deg);
            }
            .takeMe span:nth-of-type(4)  {
                transform: rotate(-30deg);
            }
            .takeMe span:nth-of-type(5)  {
                transform: rotate(10deg);
            }
            .takeMe span:nth-of-type(6)  {
                transform: rotate(30deg);
            }
            .takeMe span:nth-of-type(7)  {
                transform: rotate(60deg);
            }
            .takeMe span:nth-of-type(8)  {
                transform: rotate(80deg);
            }
            .takeMe span:nth-of-type(9)  {
                transform: rotate(110deg);
            }
            .takeMe span:nth-of-type(10)  {
                transform: rotate(130deg);
            }
            .takeMe span:nth-of-type(11)  {
                transform: rotate(160deg);
            }
            .takeMe span:nth-of-type(12)  {
                transform: rotate(180deg);
            }
            .takeMe span:nth-of-type(13)  {
                transform: rotate(200deg);
            }
            .takeMe span:nth-of-type(14)  {
                transform: rotate(220deg);
            }
            .takeMe span:nth-of-type(15)  {
                transform: rotate(240deg);
            }
            .takeMe span:nth-of-type(16)  {
                transform: rotate(260deg);
            }
        }
    }

